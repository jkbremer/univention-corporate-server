[Unit]
Description=Univention Management Console Web Server
After=network.target apache2.service univention-management-console-server.service

[Service]
Type=forking
PIDFile=/var/run/umc-web-server.pid
ExecStart=/usr/sbin/univention-management-console-web-server start
ExecStop=/usr/sbin/univention-management-console-web-server stop
ExecReload=/usr/sbin/univention-management-console-web-server reload
User=root
Group=root
StandardOutput=/var/log/univention/management-console-web-server.log
StandardError=/var/log/univention/management-console-web-server.log

[Install]
WantedBy=multi-user.target
